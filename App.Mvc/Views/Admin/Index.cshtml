@model List<App.Mvc.Data.Entities.UserEntity>

@{
    ViewData["Title"] = "Admin Paneli - Onay Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">Onay Bekleyen Başvurular</h2>
            <p class="text-muted">Sisteme yeni kayıt olan ve onay bekleyen kullanıcıların listesi.</p>
        </div>
        <span class="badge bg-primary p-2">
            Toplam: @Model.Count Aday
        </span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-check display-1 text-muted"></i>
                    <h4 class="mt-3 text-secondary">Şu an onay bekleyen kullanıcı bulunmuyor.</h4>
                    <p class="text-muted">Tüm başvurular sonuçlandırılmış.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Kullanıcı Bilgileri</th>
                                <th>E-posta</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-muted">#@item.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3 bg-soft-primary text-primary rounded-circle p-2 text-center" style="width: 40px; background-color: #e7f1ff;">
                                                @item.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="fw-semibold">@item.UserName</span>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Approve" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-success px-3"
                                               onclick="return confirm('@item.UserName onaylansın mı?')">
                                                <i class="bi bi-check-lg"></i> Onayla
                                            </a>
                                            <a asp-action="Reject" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger px-3"
                                               onclick="return confirm('@item.UserName reddedilsin mi?')">
                                                <i class="bi bi-x-lg"></i> Reddet
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-link text-decoration-none p-0">
            <i class="bi bi-arrow-left"></i> Dashboard'a Geri Dön
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}