@model List<App.Mvc.Data.Entities.UserEntity>
@{
    ViewData["Title"] = "Yetki Yönetimi";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Kullanıcı Yetki Yönetimi</h2>
            <p class="text-muted small mb-0">Sistemdeki aktif kullanıcıların rollerini buradan düzenleyebilirsiniz.</p>
        </div>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-hourglass-split"></i> Onay Bekleyenler
            </a>
           
            <a asp-action="RejectedUsers" class="btn btn-sm btn-outline-danger ms-2">
                <i class="bi bi-person-x"></i> Yasaklı Listesi
            </a>
        </div>
    </div>

   
    <table class="table table-hover shadow-sm border">
        @* ... *@
    </table>
</div>
    <table class="table table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>Mevcut Rol</th>
                <th class="text-center">Rol Değiştir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge bg-info text-dark">@user.Role.Name</span>
                    </td>
                    <td class="text-center">
                        @if (user.Role.Name != "SuperAdmin")
                        {
                            <form asp-action="ChangeRole" method="post" asp-controller="Admin" asp-route-userId="@user.Id" class="d-inline">
                                <button type="submit" name="roleName" value="Admin" class="btn btn-sm btn-outline-danger">Admin Yap</button>
                                <button type="submit" name="roleName" value="Moderator" class="btn btn-sm btn-outline-primary">Moderator Yap</button>
                                <button type="submit" name="roleName" value="User" class="btn btn-sm btn-outline-secondary">User Yap</button>                          
                            </form>
                        }
                        else
                        {
                            <span class="text-muted small"><i>Sistem Sahibi Korumalı</i></span>
                        }
                    </td>
                </tr>        
            }
        </tbody>
    </table>
</div>