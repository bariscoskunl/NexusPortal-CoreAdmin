@model List<App.Mvc.Data.Entities.UserEntity>

<div class="container mt-4">
    <h2 class="text-danger fw-bold"><i class="bi bi-person-x-fill"></i> Reddedilen Kullanıcılar</h2>
    <p class="text-muted">Sisteme girişi engellenmiş veya başvurusu reddedilmiş hesaplar.</p>

    <div class="card shadow-sm">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Kullanıcı</th>
                    <th>E-posta</th>
                    <th>İşlem</th>
                    <a class="btn btn-sm btn-info" asp-action="UserManagement" asp-controller="Admin">Geri Dön</a>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>                           
                            <form asp-action="Approve" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-outline-success">Yasağı Kaldır</button>
                            </form>                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>