@{
    ViewData["Title"] = "Erişim Engellendi";
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Belirsiz";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-lock-fill text-danger" style="font-size: 6rem;"></i>
            </div>

            <h1 class="display-4 fw-bold text-dark">Dur Yolcu!</h1>
            <h3 class="text-danger mb-4">Bu Sayfa İçin Yetkiniz Yok</h3>

            <div class="card border-0 shadow-sm bg-light mb-4">
                <div class="card-body">
                    <p class="lead mb-0">
                        Şu an sisteme <strong>@userRole</strong> yetkisiyle bağlısınız.
                        Girmek istediğiniz alan sadece üst düzey yetkililere özeldir.
                    </p>
                </div>
            </div>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-house-door"></i> Ana Sayfaya Dön
                </a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left"></i> Geri Git
                </a>
            </div>

            @if (User.IsInRole("User"))
            {
                <div class="alert alert-info mt-5 border-0 shadow-sm">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <strong>Not:</strong> Eğer bir hata olduğunu düşünüyorsanız veya <strong>Moderator</strong> yetkisi almanız gerekiyorsa lütfen sistem yöneticisiyle iletişime geçin.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}