@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <i class="bi bi-person-badge text-primary" style="font-size: 4rem;"></i>
                <h2 class="fw-bold mt-2">Sisteme Giriş</h2>
                <p class="text-muted">Lütfen bilgilerinizi kullanarak oturum açın.</p>
            </div>

            <div class="card shadow border-0 rounded-3">
                <div class="card-body p-4">
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4 border-0 shadow-sm" role="alert">
                            <i class="bi bi-exclama-triangle-fill me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="Email">E-posta Adresi</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre">
                            <label asp-for="Password">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Hesabınız yok mu?
                                <a asp-controller="Auth" asp-action="Register" class="text-primary text-decoration-none fw-bold">Şimdi Kaydolun</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center">
                <p class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i>
                    Yeni kayıtlar Admin onayı gerektirmektedir.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}