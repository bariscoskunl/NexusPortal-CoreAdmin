@model RegisterViewModel
@{
    ViewData["Title"] = "Yeni Kayıt";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <i class="bi bi-person-plus text-primary" style="font-size: 4rem;"></i>
                <h2 class="fw-bold mt-2">Aramıza Katılın</h2>
                <p class="text-muted">Hesabınızı oluşturun ve onay sürecini başlatın.</p>
            </div>

            <div class="card shadow border-0 rounded-3">
                <div class="card-body p-4 p-md-5">

                    @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4 border-0 shadow-sm" role="alert">
                            <i class="bi bi-exclama-triangle-fill me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="Register" method="post">

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="form-floating">
                                    <input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adı">
                                    <label asp-for="UserName">Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta">
                                    <label asp-for="Email">E-posta Adresi</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
                                    <label asp-for="Password">Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Şifre Onay">
                                    <label asp-for="PasswordConfirm">Şifre Onay</label>
                                    <span asp-validation-for="PasswordConfirm" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info border-0 shadow-sm small mb-4">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Kayıt olduktan sonra hesabınız <strong>Admin</strong> onayına sunulacaktır. Onaylanana kadar giriş yapamazsınız.
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                <i class="bi bi-check-circle me-2"></i> Kaydı Tamamla
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Zaten bir hesabınız var mı?
                                <a asp-controller="Auth" asp-action="Login" class="text-primary text-decoration-none fw-bold">Giriş Yapın</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}